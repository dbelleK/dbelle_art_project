<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.dbellart.web.domain.User">

	<!-- 1.회원가입 insert -->
	<insert  id="addUserinfo" parameterType="User" useGeneratedKeys="true"  keyProperty="idx">
		insert into USER (name, email, pw, pwCheck, tel, address, checkAll)
		values (#{name}, #{email}, #{pw}, #{pwCheck}, #{tel}, #{address} , #{checkAll})
	</insert>
	
	<!-- 2.회원정보 불러오기(이메일로 중복 확인) -->
	<select id="joinUserInfo" parameterType="String" resultType="User">
		select*from ---  where email = #{email}
	</select>
	
	<!-- 2.로그인하기 -->
	<select id="loginUserInfo" parameterType="User" resultType="User">
		select email, pw from ---  where email = #{email} and pw=#{pw}
	</select>

</mapper>